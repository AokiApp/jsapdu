{
  "name": "@aokiapp/pcsc-ffi-node",
  "version": "0.0.1",
  "description": "PC/SC Foreign Function Interface (FFI) library for Node.js using Koffi",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "node --test"
  },
  "keywords": [
    "pcsc",
    "ffi",
    "koffi",
    "smartcard",
    "winscard",
    "native",
    "bindings"
